<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_white_corner_shape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="正在更新"
            android:textColor="@color/homeblue"
            android:textSize="@dimen/standard_textsize_f2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg" />


    <shlottery.gov.cn.lotterycenter.ui.view.HorizontalProgressBarWithNumber
        android:id="@+id/down_progress"
        android:layout_width="fill_parent"
        android:layout_height="100.0dip"
        android:background="@color/white"
        android:gravity="center"
        app:progress_reached_bar_height="@dimen/dp_size_8dp"
        app:progress_reached_color="@color/homeblue"
        app:progress_text_color="@color/homeblue"
        app:progress_unreached_bar_height="@dimen/dp_size_8dp">

    </shlottery.gov.cn.lotterycenter.ui.view.HorizontalProgressBarWithNumber>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg" />

    <Button
        android:id="@+id/download_cancle_bt"
        android:layout_width="match_parent"
        android:layout_height="35.0dip"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_size_10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="@dimen/dp_size_10dp"
        android:layout_weight="1.0"
        android:background="@drawable/shape_enable_bluegray_corner2_selector"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_white_black_selecor"
        android:textSize="@dimen/standard_textsize_f4" />

</LinearLayout>