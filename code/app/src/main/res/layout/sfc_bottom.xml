<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sfc_deleteall_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:background="@drawable/sfc_shape_grayblue_selector"
        android:gravity="center"
        android:text="清空"
        android:textColor="@drawable/text_blackwhite_pre_selector"
        android:textSize="@dimen/sp_size_15sp_T15" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:layout_weight="6"
        android:background="@drawable/sfc_total_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sfcBottom_matchCount_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_size_14sp_T14"
            android:text="0注 0元"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/sfcBottom_sub_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_size_13sp_T13"
            android:text="(请至少选择14场比赛)"
            android:textColor="@color/black_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/sfc_sum_bt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:background="@drawable/sfc_shape_bluegray_selector"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/black_white_enable_selector"
        android:textSize="@dimen/sp_size_15sp_T15" />

</LinearLayout>