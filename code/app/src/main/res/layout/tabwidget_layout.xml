<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/widget_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tabwidget_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jishu_selected"

            />

        <TextView
            android:id="@+id/tabwidget_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_10dp"
            android:gravity="center"
            android:text="原创"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_15sp_T15" />
    </LinearLayout>


    <View
        android:id="@+id/tabwidget_line"
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:layout_below="@+id/widget_ll"
        android:layout_marginTop="8dip"
        android:background="@color/blue" />
</RelativeLayout>