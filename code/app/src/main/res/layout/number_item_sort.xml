<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray_bglight"
    >

    <TextView
        android:id="@+id/syxw_num_tv"
        android:layout_width="@dimen/key_ball_width"
        android:layout_height="@dimen/key_ball_width"
        android:layout_centerHorizontal="true"
        android:background="@drawable/num_noselected"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/standard_textcolor_c8"
        android:textSize="@dimen/sp_size_18sp_T18" />

    <TextView
        android:id="@+id/miss_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/syxw_num_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3.0dip"
        android:gravity="center"
        android:singleLine="true"
        android:text="5"
        android:textColor="@drawable/text_gray_red_selector"
        android:textSize="@dimen/sp_size_12sp_T12" />

</RelativeLayout>