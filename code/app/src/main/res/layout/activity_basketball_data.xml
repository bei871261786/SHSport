<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_matchanalytics"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/lottery_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_white_corner_shape"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_white_corner_shape">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/matchname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_size_15sp_T15" />

                <!--  <TextView
                      android:id="@+id/matchdengji_tv"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="5dp"
                      android:gravity="center"
                      android:text="二级"
                      android:textColor="@color/black"
                      android:textSize="@dimen/standard_textsize_f5" />-->

                <TextView
                    android:id="@+id/livematchtime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_size_15sp_T15" />

                <!--  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="5dp"
                      android:gravity="center"
                      android:text="10:20"
                      android:textColor="@color/black"
                      android:textSize="@dimen/standard_textsize_f5" />-->


            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/visitimage_im"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/fenshu_ll"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/hostimage_im"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/fenshu_ll"
                android:padding="5dp" />

            <LinearLayout
                android:id="@+id/fenshu_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/visitscore_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/select_red"
                        android:textSize="@dimen/sp_size_18sp_T18"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/live_maohao_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/select_red"
                        android:textSize="@dimen/sp_size_18sp_T18"
                        android:visibility="invisible" />


                    <TextView
                        android:id="@+id/host_score_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="100"
                        android:textColor="@color/select_red"
                        android:textSize="@dimen/sp_size_18sp_T18"
                        android:visibility="invisible" />

                </LinearLayout>

                <TextView
                    android:id="@+id/haltscore_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/live_maohao_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_size_12sp_T12"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/extrascore_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/live_maohao_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_size_12sp_T12"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/pointscore_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/live_maohao_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_size_12sp_T12"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/match_staus_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/standard_textsize_f5" />

            <TextView
                android:id="@+id/visitteam_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/match_staus_tv"
                android:gravity="center"
                android:textColor="@color/homeblue"
                android:textSize="@dimen/sp_size_14sp_T14" />

            <TextView
                android:id="@+id/hostteam_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/match_staus_tv"
                android:gravity="center"
                android:textColor="@color/homeblue"
                android:textSize="@dimen/sp_size_14sp_T14" />

            <TextView
                android:id="@+id/visitrank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/visitteam_tv"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_size_12sp_T12" />

            <TextView
                android:id="@+id/hostrank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/hostteam_tv"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_size_12sp_T12" />

        </RelativeLayout>

        <!--球队比分-->
        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_size_10dp"
            android:layout_marginLeft="@dimen/dp_size_15dp"
            android:layout_marginRight="@dimen/dp_size_15dp"
            android:layout_marginTop="@dimen/dp_size_5dp"
            android:orientation="vertical"
            android:visibility="invisible">

            <TableRow
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tablerow_gray_bg"
                    android:gravity="center"
                    android:text="球队排名"
                    android:textSize="@dimen/sp_size_14sp_T14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/tablerow_gray_bg"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tab_1_title"
                        style="@style/basketball_tabrow"
                        android:text="1节" />

                    <TextView
                        android:id="@+id/tab_2_title"
                        style="@style/basketball_tabrow"
                        android:text="2节" />

                    <TextView
                        android:id="@+id/tab_3_title"
                        style="@style/basketball_tabrow"
                        android:text="3节" />

                    <TextView
                        android:id="@+id/tab_4_title"
                        style="@style/basketball_tabrow"
                        android:text="4节" />


                    <TextView
                        android:id="@+id/title_jia1_tv"
                        style="@style/basketball_tabrow"
                        android:text="加1"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/title_jia2_tv"
                        style="@style/basketball_tabrow"
                        android:text="加2"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/title_jia3_tv"
                        style="@style/basketball_tabrow"
                        android:text="加3"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/title_jia4_tv"
                        style="@style/basketball_tabrow"
                        android:text="加4"
                        android:visibility="gone" />

                </LinearLayout>

            </TableRow>

            <!--客队-->
            <TableRow
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tab_visitname_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tablerow_white_bg"
                    android:gravity="center"
                    android:text="客场"
                    android:textColor="@color/homeblue"
                    android:textSize="@dimen/sp_size_14sp_T14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/tablerow_white_bg"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/visitfirst_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--" />

                    <TextView
                        android:id="@+id/visitsecond_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--" />

                    <TextView
                        android:id="@+id/visitthird_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--" />

                    <TextView
                        android:id="@+id/visitforth_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--" />


                    <TextView
                        android:id="@+id/visitjia1_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/visitjia2_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/visitjia3_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/visitjia4_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--"
                        android:visibility="gone" />

                </LinearLayout>

            </TableRow>
            <!--主队-->
            <TableRow
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tab_hostname_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tablerow_white_bg"
                    android:gravity="center"
                    android:text="主场"
                    android:textColor="@color/homeblue"
                    android:textSize="@dimen/sp_size_14sp_T14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/tablerow_white_bg"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/hostfirst_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--" />

                    <TextView
                        android:id="@+id/hostsecond_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--" />

                    <TextView
                        android:id="@+id/hostthird_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--" />

                    <TextView
                        android:id="@+id/hostforth_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--" />


                    <TextView
                        android:id="@+id/hostjia1_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/hostjia2_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/hostjia3_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/hostjia4_num_tv"
                        style="@style/basketball_tabrow"
                        android:text="--"
                        android:visibility="gone" />

                </LinearLayout>

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <shlottery.gov.cn.lotterycenter.ui.widget.ObservableScrollView
        android:id="@+id/analysis_scr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_white_corner_shape"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_size_15dp"
                android:paddingRight="@dimen/dp_size_15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <TextView
                        android:id="@+id/qiudui_vs_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@color/white"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="球队对比"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_size_16sp_T16" />

                    <RelativeLayout
                        android:id="@+id/qiudui_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/qiuduiclose_im"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/close" />

                        <ImageView
                            android:id="@+id/qiuduiopen_im"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/open" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/base_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="0.5dp"
                    android:paddingTop="0.5dp"
                    android:background="@drawable/white_border_shape"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/base_listv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null" />
                </LinearLayout>
            </LinearLayout>

            <!--客队球员数据统计-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/white_white_corner_shape"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_size_15dp"
                android:paddingRight="@dimen/dp_size_15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/visit_person_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@color/white"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="客队球员"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_size_16sp_T16" />

                    <RelativeLayout
                        android:id="@+id/visitperson_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/visitclose_im"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/close" />

                        <ImageView
                            android:id="@+id/visitopen_im"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/open" />
                    </RelativeLayout>
                </RelativeLayout>

                <!-- 此部分是标题部分 -->

                <LinearLayout
                    android:id="@+id/basketvisit_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_border_shape"
                    android:orientation="vertical"
                    android:padding="0.5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 左侧标题的父容器 -->

                        <LinearLayout
                            android:id="@+id/visitleft_title_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical"></LinearLayout>

                        <!-- 右侧标题的父容器可实现水平滚动 -->

                        <shlottery.gov.cn.lotterycenter.ui.view.SyncHorizontalScrollView
                            android:id="@+id/visittitle_horsv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scrollbars="none">

                            <LinearLayout
                                android:id="@+id/visitright_title_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                            </LinearLayout>
                        </shlottery.gov.cn.lotterycenter.ui.view.SyncHorizontalScrollView>
                    </LinearLayout>

                    <!-- 此部分是内容部分 用ScrollView实现上下滚动效果 -->

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- 左侧内容的父容器 -->

                            <LinearLayout
                                android:id="@+id/visitleft_container"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <include layout="@layout/layout_left_title" />

                                <ListView
                                    android:id="@+id/visitleft_container_listview"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:divider="@null" />
                            </LinearLayout>

                            <!-- 右侧内容的父容器 实现水平滚动 -->

                            <shlottery.gov.cn.lotterycenter.ui.view.SyncHorizontalScrollView
                                android:id="@+id/visitcontent_horsv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/visitright_container"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <include layout="@layout/layout_right_tab" />

                                    <ListView
                                        android:id="@+id/visitright_container_listview"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:divider="@null" />

                                </LinearLayout>
                            </shlottery.gov.cn.lotterycenter.ui.view.SyncHorizontalScrollView>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>

            <!--主队球员数据统计-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/white_white_corner_shape"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_size_15dp"
                android:paddingRight="@dimen/dp_size_15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/analytics_vs_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@color/white"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="主队球员"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_size_16sp_T16" />

                    <RelativeLayout
                        android:id="@+id/analysis_base_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/baseclose_im"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/close" />

                        <ImageView
                            android:id="@+id/baseopen_im"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/open" />
                    </RelativeLayout>

                </RelativeLayout>

                <!-- 此部分是标题部分 -->

                <LinearLayout
                    android:id="@+id/baskethost_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_border_shape"
                    android:orientation="vertical"
                    android:padding="0.5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 左侧标题的父容器 -->


                        <!-- 右侧标题的父容器可实现水平滚动 -->

                        <shlottery.gov.cn.lotterycenter.ui.view.SyncHorizontalScrollView
                            android:id="@+id/title_horsv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:scrollbars="none">

                            <LinearLayout
                                android:id="@+id/right_title_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            </LinearLayout>
                        </shlottery.gov.cn.lotterycenter.ui.view.SyncHorizontalScrollView>

                    </LinearLayout>

                    <!-- 此部分是内容部分 用ScrollView实现上下滚动效果 -->

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/white_corner_shape">

                            <!-- 左侧内容的父容器 -->
                            <LinearLayout
                                android:id="@+id/left_container"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <include layout="@layout/layout_left_title" />

                                <ListView
                                    android:id="@+id/left_container_listview"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:divider="@null" />
                            </LinearLayout>

                            <!-- 右侧内容的父容器 实现水平滚动 -->

                            <shlottery.gov.cn.lotterycenter.ui.view.SyncHorizontalScrollView
                                android:id="@+id/content_horsv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:focusable="false"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <include layout="@layout/layout_right_tab" />

                                    <LinearLayout
                                        android:id="@+id/right_container"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <ListView
                                            android:id="@+id/right_container_listview"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:divider="@null" />

                                    </LinearLayout>
                                </LinearLayout>
                            </shlottery.gov.cn.lotterycenter.ui.view.SyncHorizontalScrollView>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </shlottery.gov.cn.lotterycenter.ui.widget.ObservableScrollView>
</LinearLayout>
