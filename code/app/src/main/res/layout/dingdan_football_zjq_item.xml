<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:layout_margin="15dp"
    android:layout_marginLeft="16.0dip"
    android:background="@color/white"
    android:minHeight="@dimen/list_item_zjq_height"
    android:orientation="horizontal"
    android:paddingBottom="14.0dip"
    android:paddingRight="5.0dip"
    android:paddingTop="14.0dip">

    <ImageView
        android:id="@+id/dingdan_zjq_match_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="10.0dip"
        android:src="@mipmap/icon_del" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="3.0"
        android:background="@drawable/gray_nocorner_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dingdan_zjq_host_name_tv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="曼联曼联"
                android:textColor="@drawable/color_enable_c2_wihte_selector"
                android:textSize="@dimen/standard_textsize_f2" />

            <TextView
                android:id="@+id/dingdan_zjq_ping_name_tv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="VS"
                android:textColor="@drawable/color_enable_c2_wihte_selector"
                android:textSize="@dimen/standard_textsize_f2" />

            <TextView
                android:id="@+id/dingdan_zjq_visit_name_tv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="曼联曼联"
                android:textColor="@drawable/color_enable_c2_wihte_selector"
                android:textSize="@dimen/standard_textsize_f2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="6dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dingdan_zjq_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/standard_textsize_f7" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dingdan_zjq_match_dantuo"
        android:layout_width="30.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_margin="5.0dip"
        android:background="@drawable/shapewithboard_white_grey_selector"
        android:gravity="center"
        android:singleLine="true"
        android:text="胆"
        android:textColor="@drawable/color_enable_c2_wihte_selector"
        android:textSize="@dimen/standard_textsize_f3" />
</LinearLayout>


