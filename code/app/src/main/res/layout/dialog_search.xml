<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_white_corner_shape"
    android:orientation="vertical"
    android:padding="10dp">


    <EditText
        android:id="@+id/dialogsearch_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/gray_corner_border_shape"
        android:gravity="left|center_vertical"
        android:hint="输入要搜索的问题"
        android:inputType="text"
        android:maxLength="30"
        android:minHeight="50dp"
        android:padding="10dp"
        android:textColor="@color/circle_default_gray"
        android:textSize="@dimen/sp_size_15sp_T15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_search_search"
            android:layout_width="100dp"
            android:layout_height="35.0dip"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/centerview"
            android:background="@drawable/shape_enable_bluegray_corner2_selector"
            android:text="搜索"
            android:textColor="@color/text_white_black_selecor"
            android:textSize="@dimen/standard_textsize_f4_S" />

        <Button
            android:id="@+id/dialog_search_clear"
            android:layout_width="100dp"
            android:layout_height="35.0dip"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@id/centerview"
            android:background="@drawable/shape_enable_grayblue_corner2_selector"
            android:text="清空"
            android:textColor="@color/text_black_white_selecor"
            android:textSize="@dimen/standard_textsize_f4_S" />

    </LinearLayout>


</LinearLayout>
