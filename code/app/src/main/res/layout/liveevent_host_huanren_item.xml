<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/white"
    android:minHeight="30dp">

    <TextView
        android:id="@+id/hosthuanren_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="[0']"
        android:textColor="@color/back_gray"
        android:textSize="@dimen/standard_textsize_f5" />

    <TextView
        android:id="@+id/hostjoninname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/hosthuanren_time_tv"
        android:gravity="center"
        android:text="罗纳尔多"
        android:textColor="@color/back_gray"
        android:textSize="@dimen/standard_textsize_f5" />

    <ImageView
        android:id="@+id/hostjoinin_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/hostjoninname_tv"
        android:src="@mipmap/join_in" />

    <TextView
        android:id="@+id/hostleavename_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/hostjoinin_im"
        android:gravity="center"
        android:text="罗纳尔多"
        android:textColor="@color/back_gray"
        android:textSize="@dimen/standard_textsize_f5" />

    <ImageView
        android:id="@+id/hostleave_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/hostleavename_tv"
        android:src="@mipmap/leave" />

</RelativeLayout>