<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_white_corner_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="兑换代金券"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_size_10dp"
            android:layout_marginTop="@dimen/dp_size_10dp"
            android:src="@mipmap/close_dialog" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_50dp"
        android:layout_marginLeft="@dimen/dp_size_15dp"
        android:layout_marginRight="@dimen/dp_size_15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_size_10dp">

        <ImageView
            android:id="@+id/dialog_cash_minus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/minus_sign" />

        <TextView
            android:id="@+id/dialog_cash_edit"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_whitegray_corner"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/back_gray" />


        <ImageView
            android:id="@+id/dialog_cash_plus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/plus_sign" />
    </LinearLayout>


    <Button
        android:id="@+id/dialog_cash_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15.0dip"
        android:background="@drawable/shape_enable_bluegray_corner1_selector"
        android:gravity="center"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip"
        android:text="兑换"
        android:textColor="@color/text_white_blue_selecor"
        android:textCursorDrawable="@drawable/edittext_color"
        android:textSize="@dimen/standard_textsize_f1" />
</LinearLayout>