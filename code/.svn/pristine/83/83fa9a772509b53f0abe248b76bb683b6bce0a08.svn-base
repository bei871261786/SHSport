<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:minHeight="@dimen/dp_size_35dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/vs_time_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:text="16-12-12"
        android:maxLines="1"
        android:textColor="@color/black_gray"
        android:textSize="@dimen/sp_size_13sp_T13" />

    <TextView
        android:id="@+id/vs_leaguage_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="6"
        android:textColor="@color/black_gray"
        android:textSize="@dimen/sp_size_13sp_T13" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9">

        <TextView
            android:id="@+id/vs_bifen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/sp_size_13sp_T13"
            android:textColor="@color/black_gray" />

        <TextView
            android:id="@+id/vs_hostname_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_size_10dp"
            android:layout_toLeftOf="@+id/vs_bifen_tv"
            android:gravity="center"
            android:maxLines="1"
            android:maxLength="6"
            android:textSize="@dimen/sp_size_13sp_T13"
            android:textColor="@color/black_gray" />

        <TextView
            android:id="@+id/vs_visitname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_10dp"
            android:layout_toRightOf="@+id/vs_bifen_tv"
            android:gravity="center"
            android:textSize="@dimen/sp_size_13sp_T13"
            android:maxLines="1"
            android:maxLength="6"
            android:textColor="@color/black_gray" />

        <TextView
            android:id="@+id/vs_hostred_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_size_5dp"
            android:layout_toLeftOf="@+id/vs_hostname_tv"
            android:background="@color/select_red"
            android:gravity="center"
            android:textSize="@dimen/sp_size_13sp_T13"
            android:paddingLeft="@dimen/dp_size_2dp"
            android:paddingRight="@dimen/dp_size_2dp"
            android:maxLines="1"
            android:maxLength="6"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/vs_visitred_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_5dp"
            android:layout_toRightOf="@+id/vs_visitname_tv"
            android:background="@color/select_red"
            android:gravity="center"
            android:textSize="@dimen/sp_size_13sp_T13"
            android:maxLines="1"
            android:maxLength="6"
            android:paddingLeft="@dimen/dp_size_2dp"
            android:paddingRight="@dimen/dp_size_2dp"
            android:textColor="@color/white"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>