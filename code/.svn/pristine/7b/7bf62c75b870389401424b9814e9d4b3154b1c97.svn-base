<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_graydeepgray_graident_corner"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/adapter_newlist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_size_15sp_T15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_newlist_tab1"
                style="@style/news_tab_style" />

            <TextView
                android:id="@+id/adapter_newlist_tab2"
                style="@style/news_tab_style" />

            <TextView
                android:id="@+id/adapter_newlist_tab3"
               style="@style/news_tab_style"/>
        </LinearLayout>


        <TextView
            android:id="@+id/adapter_newlist_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_margin="@dimen/dp_size_5dp"
            android:textColor="@color/black_gray"
            android:textSize="@dimen/sp_size_13sp_T13" />
    </RelativeLayout>

</LinearLayout>
