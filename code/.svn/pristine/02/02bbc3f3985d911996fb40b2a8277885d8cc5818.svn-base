<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/selfquestion_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text=" "
        android:textColor="@color/black"
        android:textSize="@dimen/sp_size_13sp_T13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray2_border_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selfquestion_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text=" "
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_15sp_T15" />

        <View
            android:id="@+id/selfquestion_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/question_border"></View>

        <TextView
            android:id="@+id/selfquestion_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text=" "
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_15sp_T15" />

    </LinearLayout>

</LinearLayout>
