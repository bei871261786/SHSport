<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/agreexiyi_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/agreexiyi_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_enable_bluegray_corner1_selector"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_textsize_f1" />

    </LinearLayout>

    <TextView
        android:id="@+id/xiyititle_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/red_nocorner_shape"
        android:gravity="center"
        android:padding="10dp"
        android:text="雪缘园用户协议"
        android:textColor="@color/white"
        android:textSize="@dimen/standard_textsize_f1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/yellow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/agreexiyi_ll"
        android:layout_below="@id/xiyititle_tv"
        android:fadeScrollbars="true"
        android:scrollbarThumbVertical="@drawable/yellow_corner_shape"
        android:scrollbars="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="15dp"
            android:lineSpacingExtra="1dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/goucaixieyi"
            android:textColor="@color/black"
            android:textSize="@dimen/standard_textsize_f3" />
    </ScrollView>


</RelativeLayout>