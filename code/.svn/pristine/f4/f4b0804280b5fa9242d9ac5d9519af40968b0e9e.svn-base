<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/white"
    android:minHeight="30dp">

    <TextView
        android:id="@+id/visithuanren_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="[0']"
        android:textColor="@color/back_gray"
        android:textSize="@dimen/standard_textsize_f5" />

    <TextView
        android:id="@+id/visitleavename_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/visithuanren_time_tv"
        android:gravity="center"
        android:text="罗纳尔多"
        android:textColor="@color/back_gray"
        android:textSize="@dimen/standard_textsize_f5" />

    <ImageView
        android:id="@+id/visitleave_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/visitleavename_tv"
        android:src="@mipmap/leave" />


    <TextView
        android:id="@+id/visitjoninname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/visitleave_im"
        android:gravity="center"
        android:text="罗纳尔多"
        android:textColor="@color/back_gray"
        android:textSize="@dimen/standard_textsize_f5" />

    <ImageView
        android:id="@+id/visitjoinin_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/visitjoninname_tv"
        android:src="@mipmap/join_in" />
</RelativeLayout>