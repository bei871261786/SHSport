<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_titleBar"
    style="@style/head_title_barstyle"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:id="@+id/titlebar_back_ll"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fitsSystemWindows="true"
            android:src="@mipmap/topback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_18sp_T18"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titlebar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLines="1"
            android:text="体彩开奖"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_size_20sp_T20" />

    </LinearLayout>


    <ImageView
        android:id="@+id/indicator_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/indicator_right"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/indicator_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/calendar"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/indicator_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/indicator_more"
        android:visibility="gone" />


</RelativeLayout>