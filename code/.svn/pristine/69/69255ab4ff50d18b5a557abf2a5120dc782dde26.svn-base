<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_pl3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

     <include layout="@layout/lottery_titlebar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/frame_gray" />

    <RadioGroup
        android:id="@+id/pl3_rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_48dp"
        android:background="@color/homeblue"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_size_8dp"
        android:paddingLeft="@dimen/dp_size_20dp"
        android:paddingRight="@dimen/dp_size_20dp"
        android:paddingTop="@dimen/dp_size_6dp">

        <RadioButton
            android:id="@+id/pl3_zhixuan_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/radiobt_whitegray_selector"
            android:button="@null"
            android:gravity="center"
            android:text="直选"
            android:textColor="@color/radiaobtn_textgray_white_color" />

        <RadioButton
            android:id="@+id/pl3_zu3_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_size_20dp"
            android:layout_marginRight="@dimen/dp_size_20dp"
            android:layout_weight="1"
            android:background="@drawable/radiobt_whitegray_selector"
            android:button="@null"
            android:gravity="center"
            android:text="组选三"
            android:textColor="@color/radiaobtn_textgray_white_color" />

        <RadioButton
            android:id="@+id/pl3_zu6_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/radiobt_whitegray_selector"
            android:button="@null"
            android:gravity="center"
            android:text="组选六"
            android:textColor="@color/radiaobtn_textgray_white_color" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/pl3_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
