<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="@dimen/sp_size_18sp_T18"
        android:textColor="@color/order_concer_tip_color"
        android:text="请选择分享平台" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dingdan_background_gray"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/share_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/umeng_socialize_wechat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="微信"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_size_15sp_T15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_wxcircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/umeng_socialize_wxcircle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="微信朋友圈"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_size_15sp_T15" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
