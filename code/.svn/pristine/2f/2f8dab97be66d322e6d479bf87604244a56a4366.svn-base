<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_bg">

        <ImageView
            android:id="@+id/adapter_super_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_player_play"
            android:visibility="visible" />
    </RelativeLayout>


    <TextView
        android:id="@+id/adapter_super_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_size_18sp_T18" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/adapter_super_host"
            android:layout_width="@dimen/image_wight_small"
            android:layout_height="@dimen/image_height_small"
            android:layout_centerVertical="true"
            android:src="@mipmap/guest" />

        <TextView
            android:id="@+id/adapter_super_guestdes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/adapter_super_host"
            android:gravity="center"
            android:text="嘉宾:"
            android:textColor="@color/dantuo_zhushi_blue"
            android:textSize="@dimen/sp_size_15sp_T15" />

        <TextView
            android:id="@+id/adapter_super_guest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/adapter_super_guestdes"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black_gray"
            android:textSize="@dimen/sp_size_15sp_T15" />


        <TextView
            android:id="@+id/adapter_super_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="22"
            android:textColor="@color/black_gray"
            android:textSize="@dimen/sp_size_15sp_T15" />
    </RelativeLayout>

</LinearLayout>
