<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/dp_size_10dp"
        android:layout_marginBottom="@dimen/dp_size_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/num_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_15dp"
            android:gravity="center|left"
            android:text="(02)11+12+16+12+16+12+16"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/select_red"
            android:textSize="@dimen/sp_size_13sp_T13" />

        <TextView
            android:id="@+id/dan_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_15dp"
            android:gravity="center|left"
            android:layout_marginTop="@dimen/dp_size_6dp"
            android:text="胆拖 10注  20元"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_13sp_T13" />

    </LinearLayout>

</LinearLayout>