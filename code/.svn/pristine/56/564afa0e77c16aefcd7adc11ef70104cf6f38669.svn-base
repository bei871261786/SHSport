<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/baseChild_visit_rank_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3.0dip"
            android:singleLine="true"
            android:textColor="@color/standard_textcolor_c3"
            android:textSize="@dimen/standard_textsize_f6" />

        <TextView
            android:id="@+id/baseChild_visit_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="客队"
            android:textColor="@color/expandtxt_matchname_red"
            android:textSize="@dimen/standard_textsize_f4_S" />


    </LinearLayout>

    <TextView
        android:id="@+id/baseChild_ping_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:singleLine="true"
        android:text="VS"
        android:textColor="@color/standard_textcolor_c2"
        android:textSize="@dimen/standard_textsize_f4_S" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/baseChild_host_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="主队"
            android:textColor="@color/expandtxt_matchname_red"
            android:textSize="@dimen/standard_textsize_f4_S" />

        <TextView
            android:id="@+id/baseChild_host_rank_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="3.0dip"
            android:singleLine="true"
            android:textColor="@color/standard_textcolor_c3"
            android:textSize="@dimen/standard_textsize_f6" />


    </LinearLayout>

</LinearLayout>
