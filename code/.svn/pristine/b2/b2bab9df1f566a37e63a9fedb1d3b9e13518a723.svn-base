<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_corner_black_shape">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:minWidth="300dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/payment_dialog_input"
            android:textColor="@color/black"
            android:textSize="@dimen/standard_textsize_f3" />

        <EditText
            android:id="@+id/payment_dialog_pwd"
            style="@style/edittext_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/white_nocorner_black_shape"
            android:textColor="@color/black"
            android:textCursorDrawable="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:text="@string/payment_dialog_forget"
            android:textColor="@color/txt_big"
            android:textSize="@dimen/standard_textsize_f3"
            android:visibility="gone" />

        <Button
            android:id="@+id/payment_dialog_payButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/yellow"
            android:text="чбошод"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_textsize_f1" />
    </LinearLayout>
</RelativeLayout>
