<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/adapter_newlist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_size_15dp"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_size_16sp_T16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_newlist_tab1"
                style="@style/news_tab_style" />

            <TextView
                android:id="@+id/adapter_newlist_tab2"
                style="@style/news_tab_style" />

            <TextView
                android:id="@+id/adapter_newlist_tab3"
                style="@style/news_tab_style" />
        </LinearLayout>


        <TextView
            android:id="@+id/adapter_newlist_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="***"
            android:textColor="@color/news_tab_txt"
            android:textSize="@dimen/sp_size_12sp_T12" />
    </RelativeLayout>

</LinearLayout>
